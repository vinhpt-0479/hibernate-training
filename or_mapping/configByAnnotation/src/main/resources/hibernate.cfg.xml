<?xml version='1.0' encoding='utf-8'?>

<!DOCTYPE hibernate-configuration PUBLIC

  "-//Hibernate/Hibernate Configuration DTD 3.0//EN"

  "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">


<hibernate-configuration>
	<session-factory>

		<!-- JDBC connection settings -->
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>

		<property name="connection.url">jdbc:mysql://localhost:3306/hibernate</property>

		<property name="connection.username">root</property>

		<property name="connection.password">dung1702</property>

		<!-- JDBC connection pool, use Hibernate internal connection pool -->
		<property name="connection.pool_size">5</property>


		<!-- Defines the SQL dialect used in Hiberante's application -->
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>

		<!-- Enable Hibernate's automatic session context management -->
		<property name="current_session_context_class">thread</property>

		<!-- Disable the second-level cache -->
		<property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>


		<!-- Display and format all executed SQL to stdout -->
		<property name="show_sql">true</property>

		<property name="format_sql">true</property>


		<!-- Drop and re-create the database schema on startup -->
		<property name="hbm2ddl.auto">update</property>

		<!-- List of mapping hbm files -->
        <!-- <mapping resource="model/hbm/Person.hbm.xml"/>
        <mapping resource="model/hbm/Passport.hbm.xml"/>
        <mapping resource="model/hbm/Department.hbm.xml"/>
        <mapping resource="model/hbm/Employee.hbm.xml"/>
        <mapping resource="model/hbm/Student.hbm.xml"/>
        <mapping resource="model/hbm/Course.hbm.xml"/> -->

		<!-- List of mapping annotation files -->
        <mapping class="model.entity.Person"/>
        <mapping class="model.entity.Passport"/>
        <mapping class="model.entity.Department"/>
        <mapping class="model.entity.Employee"/>
        <mapping class="model.entity.Student"/>
        <mapping class="model.entity.Course"/>
		
	</session-factory>


</hibernate-configuration>